{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": false,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["warn"],
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "object-curly-spacing": ["error", "always"],
    "no-unused-vars": [
      "warn",
      {"vars": "all", "args": "after-used", "ignoreRestSiblings": false}
    ]
  }
}
